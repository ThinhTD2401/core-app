@model List<ProductCategoryViewModel>

<div class="col-md-1 col-sm-12">
    <div class="logo">
        <img alt="ShopMart" title="TD Shop" src="~/client-side/images/logo.png">
    </div>
</div>

<div class="reverse ">

    <div class="col-md-7 col-sm-12 mtmegamenu">
        <ul>
            <li class="mt-root demo_custom_link_cms">
                <div class="mt-root-item">
                    <a href="/">
                        <div class="title title_font"><span class="title-text">Trang chủ</span></div>
                    </a>
                </div>

            </li>
            <li class="mt-root demo_custom_link_cms">
                <div class="mt-root-item">
                    <a href="bai-viet.html">
                        <div class="title title_font"><span class="title-text">GIỚI THIỆU</span></div>
                    </a>
                </div>
            </li>
            <li class="mt-root">
                <div class="mt-root-item">
                    <a href="#">
                        <div class="title title_font"><span class="title-text">Sản phẩm</span><i class="fa fa-plus hidden-lg hidden-md"></i></div>
                    </a>
                </div>
                <ul class="menu-items col-xs-12">
                    @foreach (var item in Model.Where(c => c.ParentId == null))
                    {
                        <li class="menu-item depth-1 menucol-1-3 ">
                            <div class="title title_font"> <a href="/@item.SeoAlias-c.@(item.Id).html">@item.Name</a></div>
                            <ul class="submenu">
                                @foreach (var subItem in Model.Where(x => x.ParentId == item.Id))
                                {
                                    <li class="menu-item">
                                        <div class="title"> <a href="/@subItem.SeoAlias-c.@(subItem.Id).html">@subItem.Name</a></div>
                                    </li>
                                }

                            </ul>
                        </li>
                    }

                </ul>
            </li>

            <li class="mt-root demo_custom_link_cms">
                <div class="mt-root-item">
                    <a href="bai-viet.html">
                        <div class="title title_font"><span class="title-text">TIN TỨC</span></div>
                    </a>
                </div>
            </li>

            <li class="mt-root demo_custom_link_cms">
                <div class="mt-root-item">
                    <a href="bai-viet.html">
                        <div class="title title_font"><span class="title-text">TUYỂN DỤNG</span></div>
                    </a>
                </div>
            </li>
            <li class="mt-root demo_custom_link_cms">
                <div class="mt-root-item">
                    <a href="lien-he.html">
                        <div class="title title_font"><span class="title-text">LIÊN HỆ</span></div>
                    </a>
                </div>
            </li>
            <li></li>
        </ul>
    </div>

    <div class="menu-mobile col-sm-12 hidden-lg hidden-md">
        <i class="fa fa-bars nav-menu-mobile"></i>
    </div>

    <div class="col-md-4 col-sm-12 search">
        <div id="search">
            <form method="get" action="/tim-kiem.html">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Nhập từ khóa bạn muốn tìm kiếm" name="keyword">
                    <button class="btn-search" data-isHomePage="@ViewData["isHomePage"]" type="submit"><i class="fa fa-search"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>

