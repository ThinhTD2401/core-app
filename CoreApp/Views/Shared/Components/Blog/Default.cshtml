@model CoreApp.Models.CommonViewModels.BlogComponentViewModel
@{
    var isHomePage = (ViewData["isHomePage"] != null);
    var isBlog = (Model.Data != null && Model.Data.Results.Count > 0);
}
<!-- Main Container -->
@if (isBlog)
{
    <div class="main-container col1-layout" id="search-component">
        <div class="container">
            <!-- Center colunm-->
            <div class="blog-wrapper">
                <div class="page-title">
                    <h2>Tin tức</h2>
                </div>
                <ul class="blog-posts">
                    @foreach (var item in Model.Data.Results)
                    {
                        var url = "/" + item.SeoAlias + "-blog." + item.Id + ".html";
                        <li class="post-item col-md-4">
                            <div class="blog-box">
                                <a href="@url">
                                    <img class="primary-img" src="@item.Image" alt="@item.Name">
                                </a>
                                <div class="blog-btm-desc">
                                    <div class="blog-top-desc">
                                        <div class="blog-date">@item.DateCreated.ToString("dd MMMM yyyy")</div>
                                        <h4><a href="@url">@item.Name</a></h4>
                                        <div class="jtv-entry-meta"> <i class="fa fa-user-o"></i> <strong>Admin</strong> <a href="#"><i class="fa fa-commenting-o"></i> <strong>15 Comments</strong></a></div>
                                    </div>
                                    <br />
                                    @if (item.Description != null)
                                    {
                                        <p>@item.Description</p>
                                        <br />
                                    }
                                    <a class="read-more" href="@url">Read More</a>
                                </div>
                            </div>
                        </li>

                    }
                </ul>
                @(await Component.InvokeAsync("Pager", Model.Data))
            </div>
        </div>
    </div>
}
<!-- Main Container End -->
