@model CoreApp.Models.CommonViewModels.BlogComponentViewModel
@{
    var isHomePage = (ViewData["isHomePage"] != null);
    var isBlog = (Model.Data != null && Model.Data.Results.Count > 0);
}
<!-- Main Container -->
@if (isBlog)
{
    <div class="main-container col1-layout" id="search-component">
        <div class="container">
            <!-- Center colunm-->
            <div class="blog-wrapper">
                <div class="page-title">
                    <h2>Tin tức</h2>
                </div>
                <ul class="blog-posts">
                    @foreach (var blog in Model.Data.Results)
                    {
                        var url = string.IsNullOrEmpty(blog.SeoAlias) ? "/tin-tuc" : "/"+ blog.SeoAlias;
                        url += "-bai-viet." + blog.Id + ".html";
                        <li class="post-item col-md-4">
                            <div class="blog-box">
                                <a href="@url">
                                    <img class="primary-img" src="@blog.Image" alt="@blog.Name">
                                </a>
                                <div class="blog-btm-desc">
                                    <div class="blog-top-desc">
                                        <h4><a href="@url">@blog.Name</a></h4>
                                        <div class="jtv-entry-meta"> <i class="fa fa-user-o"></i> <strong>  Admin</strong> <a href="#"><i class="fa fa-calendar"></i> <strong>  @blog.DateCreated.ToString("dd-MM-yyyy HH:mm:ss")</strong></a></div>
                                    </div>
                                    <br />
                                    @if (blog.Description != null)
                                    {
                                        <p>@blog.Description</p>
                                        <br/>
                                    }
                                </div>
                            </div>
                        </li>

                    }
                </ul>
                @(await Component.InvokeAsync("Pager", Model.Data))
            </div>
        </div>
    </div>
}
<!-- Main Container End -->
