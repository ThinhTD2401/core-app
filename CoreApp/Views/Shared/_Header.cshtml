@using CoreApp.Utilities.Constants
<header>
    <div class="header-container">
        <div class="header-top">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-md-4 col-xs-12">
                        <!-- Default Welcome Message -->
                        <div class="welcome-msg hidden-xs hidden-sm">Chào mừng bạn đến với TD Shop </div>
                    </div>

                    <!-- top links -->
                    <div class="headerlinkmenu col-md-8 col-sm-8 col-xs-12">
                        <span class="phone  hidden-xs hidden-sm">Liên hệ: +123.456.789</span>
                        <ul class="links">
                            <li class="hidden-xs"><a title="Hỗ trợ" href="#"><span>Hỗ trợ</span></a></li>
                            <li><a title="Thanh toán" href="thanh-toan.html"><span>Thanh toán</span></a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li>
                                    <div class="dropdown">
                                        <a class="current-open" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#"><span>@User.GetSpecificClaim(CommonConstants.FullName)</span> <i class="fa fa-angle-down"></i></a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="/tai-khoan.html">Tài khoản</a></li>
                                            <li><a href="/gio-hang.html">Giỏ hàng của bạn</a></li>
                                        </ul>
                                    </div>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                                        <a href="#" onclick="document.getElementById('logoutForm').submit()"><span>Đăng xuất</span></a>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li><a title="đăng nhập" href="dang-nhap.html"><span>Đăng nhập</span></a></li>
                                <li><a title="đăng ký" href="dang-ky.html"><span>Đăng ký</span></a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- header inner -->
        <div class="header-inner">
            <div class="container">
                <div class="row">
                    <div class="col-sm-3 col-xs-12 jtv-logo-block">

                        <!-- Header Logo -->
                        <div class="logo"><a title="e-commerce" href="/"><img alt="ShopMart" title="TD Shop" src="~/client-side/images/logo.png"></a> </div>
                    </div>
                    <div class="col-xs-12 col-sm-5 col-md-7 jtv-top-search">

                        <!-- Search -->
                        <div class="top-search">
                            <div id="search">
                                <form method="get" action="/tim-kiem.html">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Nhập từ khóa bạn muốn tìm kiếm" name="keyword">
                                        <button class="btn-search" data-isHomePage="@ViewData["isHomePage"]" type="submit"><i class="fa fa-search"></i></button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!--End Search -->

                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-2 top-cart">
                        <!-- top cart -->
                        <div class="top-cart-contain">
                            <vc:header-cart></vc:header-cart>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>