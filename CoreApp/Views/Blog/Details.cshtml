@model CoreApp.Models.BlogViewModels.DetailViewModel
@{
    ViewData["Title"] = Model.Blog.Name;
    ViewData["MetaKeyword"] = Model.Blog.SeoKeywords;
    ViewData["MetaDescription"] = Model.Blog.SeoDescription;
    var blog = Model.Blog;
}

<div id="page">
        <!-- Main Container -->
        <section class="blog_post">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-9">
                        <div class="entry-detail">
                            <div class="page-title">
                            </div>
                            <div class="entry-photo">
                                <figure><img src="@blog.Image" alt="Blog"></figure>
                            </div>
                            <div class="entry-meta-data">
                                <div class="blog-top-desc">
                                    <div class="blog-date">@blog.DateCreated.ToString("dd MMMM yyyy")</div>
                                    <h1><a href="/@blog.SeoAlias-c.@(blog.Id).html">@blog.Name</a></h1>
                                    <div class="jtv-entry-meta"> <i class="fa fa-user-o"></i> <strong>Admin</strong> <a href="#"><i class="fa fa-commenting-o"></i> <strong>15 Comments</strong></a> <div class="rating"> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i>&nbsp; <span>(5 votes)</span></div></div>
                                </div>

                            </div>
                            <div class="content-text clearfix">
                                <p>@blog.Description</p>
                            </div>
                            <div class="entry-tags"> <span>Tags:</span> <a href="#">@blog.Tags</a></div>
                        </div>

                    </div>
                    <!-- right colunm -->
                    <aside class="sidebar col-xs-12 col-sm-3">
                        <!-- tags -->
                        <div class="popular-tags-area block">
                            <div class="sidebar-bar-title">
                                <h3>Popular Tags</h3>
                            </div>
                            <div class="tag">
                                <ul>
                                    @foreach (var item in blog.BlogTags)
                                    {
                                        <li>item</li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <!-- ./tags -->
                    </aside>
                    <!-- ./right colunm -->
                </div>
            </div>
        </section>
        <!-- Main Container End -->
    </div>

