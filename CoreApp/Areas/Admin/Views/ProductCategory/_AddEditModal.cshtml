<div id="modal-add-edit" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close btn-close-pop" aria-hidden="true"  data-dismiss="modal">×</button>
                <h4 class="modal-title">Category update</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmMaintainance">

                        <div class="form-group">
                            <input type="hidden" id="hidIdM" value="0" />
                            <label for="txtNameM" class="col-md-2 col-sm-12 control-label no-padding-right">Name</label>
                            <div class="col-md-10 col-sm-12">
                                <input type="text" name="txtNameM" class="form-control" id="txtNameM" placeholder="Name of category">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 col-sm-12 control-label no-padding-right">Parent</label>
                            <div class="col-md-10 col-sm-12 combo-tree">
                                <input id="ddlCategoryIdM" name="ddlCategoryIdM" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtAliasM" class="col-md-2 col-sm-12 control-label no-padding-right">Alias</label>
                            <div class="col-md-10 col-sm-12">
                                <input type="text" name="txtAliasM" class="form-control" id="txtAliasM">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtDescM" class="col-md-2 col-sm-12 control-label no-padding-right">Description</label>
                            <div class="col-md-10 col-sm-12">
                                <textarea rows="3" name="txtDescM" class="form-control" id="txtDescM"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtOrderM" class="col-md-2 col-sm-12 control-label no-padding-right">Sort Order</label>
                            <div class="col-md-10 col-sm-12">
                                <input type="number" name="txtOrderM" class="form-control" id="txtOrderM" value="0">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtHomeOrderM" class="col-md-2 col-sm-12 control-label no-padding-right">Home Order</label>
                            <div class="col-md-10 col-sm-12">
                                <input type="number" name="txtHomeOrderM" class="form-control" id="txtHomeOrderM" value="0">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtImageM" class="col-md-2 col-sm-12 control-label no-padding-right">Images</label>
                            <div class="col-md-10 col-sm-12">
                                <div class="input-group">
                                    <input type="text" name="txtImage" class="form-control" id="txtImage" readonly />
                                    <input type="file" id="fileInputImage" style="display:none" />
                                    <span class="input-group-btn">
                                        <input type="button" id="btnSelectImg" class="btn btn-default" value="Browser" />
                                    </span>
                                </div>
                            </div>

                        </div>
                        <div class="form-group" id="img-prouduct-content">

                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" checked="checked" id="ckStatusM">
                                        <span class="text">Active.</span>
                                    </label>
                                    <label>
                                        <input type="checkbox" id="ckShowHomeM">
                                        <span class="text">Show on home.</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancel" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="btnSave" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<script id="img-product-template" type="x-tmpl-mustache">
    <div class="col-sm-3 col-sm-push-2 image-product">
        <div class="img-wrapper">
            <span class="icon-image-close" data-path="{{srcImage}}"><i class="fa fa-times-circle" aria-hidden="true"></i></span>
            <img src="{{srcImage}}" class="img-thumbnail" />
        </div>
    </div>
</script>
